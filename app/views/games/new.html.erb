<div class="container">
  <h1 class="title text-center">New Game</h1>
  <ul class="list-inline text-center">
    <% @letters.each do |letter| %>
    <li class="list-inline-item letter"><%= letter.join%></li>
    <% end %>
  </ul>
  <p class="text-center question">What is the the longest word you can find?</p>
  <form action="/score" method="post" class="form-inline justify-content-center">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Word" class="form-control">
  <input id="letters" type="hidden" name="letters" value=<%= @letters.join%>>
  <input type="submit" class="btn btn-danger">
</form>
</div>
